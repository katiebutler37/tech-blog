{{!-- must remove post.post_url format because this partial doesnt know what post is it only knows the destructured variables --}}
<article class="post">
      <div class="title">
        <a href="{{post_content}}" target="_blank">{{title}}</a>
        <span>({{post_content}})</span>
      </div>
      <div class="meta">
        {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
      </div>
    </article>